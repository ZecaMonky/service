<div class="row">
    <div class="col-md-6">
        <img src="<%= product.image %>" class="img-fluid rounded product-image-fixed" alt="<%= product.name %>">
    </div>
    <div class="col-md-6">
        <h1 class="mb-4"><%= product.name %></h1>
        <p class="lead mb-4"><%= product.description %></p>
        <div class="mb-4">
            <h3 class="text-primary"><%= product.price %> ₽</h3>
            <% if (product.is_available) { %>
                <span class="badge bg-success">В наличии</span>
            <% } else { %>
                <span class="badge bg-danger">Нет в наличии</span>
            <% } %>
        </div>
        <% if (product.is_available) { %>
            <form action="/shop/cart/add" method="POST" class="mb-4">
                <input type="hidden" name="productId" value="<%= product.id %>">
                <div class="mb-3">
                    <label for="quantity" class="form-label">Количество</label>
                    <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" max="<%= product.stock %>">
                </div>
                <button type="submit" class="btn btn-primary btn-lg">Добавить в корзину</button>
            </form>
        <% } %>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Характеристики</h5>
                <ul class="list-unstyled">
                    <li><strong>Категория:</strong> <%= product.category %></li>
                    <li><strong>Бренд:</strong> <%= product.brand %></li>
                    <li><strong>Гарантия:</strong> <%= product.warranty %> месяцев</li>
                </ul>
            </div>
        </div>
    </div>
</div> 